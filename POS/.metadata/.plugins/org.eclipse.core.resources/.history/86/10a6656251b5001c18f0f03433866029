package hw5;
import static org.junit.Assert.assertEquals;
import static org.junit.Assert.assertTrue;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.util.Iterator;

import org.junit.Test;

public class MarvelPathsTest{
	
	@Test
	public void Testinput() throws FileNotFoundException {
		MarvelPaths mp = new MarvelPaths();
		mp.createNewGraph("data/empty.csv");
		assertEquals("Graph has wrong # of nodes", 0, mp.nodeSize());
		assertEquals("Graph has edges", 0, mp.edgeSize());
	}
	
	@Test
	public void Testinput1() throws FileNotFoundException {
		MarvelPaths mp = new MarvelPaths();
		mp.createNewGraph("data/e2n2.csv");
		assertEquals("Graph has wrong # of nodes", 2, mp.nodeSize());
		assertEquals("Graph has edges", 0, mp.edgeSize());
	}
	
	@Test
	public void InvalidInput() throws FileNotFoundException {
		MarvelPaths mp = new MarvelPaths();
		mp.createNewGraph("data/simple.csv");
		assertTrue(mp.findPath("BATMAN", "HUMAN ROBOT").equals("unknown char BATMAN"));
	}
	
	@Test
	public void InvalidInput2() throws FileNotFoundException {
		MarvelPaths mp = new MarvelPaths();
		mp.createNewGraph("data/simple.csv");
		assertTrue(mp.findPath("BATMAN", "BILLY").equals("unknown char BATMAN\nunknown char BILLY"));
	}
	
	@Test
	public void InvalidInput3() throws FileNotFoundException {
		MarvelPaths mp = new MarvelPaths();
		mp.createNewGraph("data/simple.csv");
		assertTrue(mp.findPath("HUMAN ROBOT", "BILLY").equals("unknown char BILLY"));
	}
	@Test
	public void InvalidInput4() throws FileNotFoundException {
		MarvelPaths mp = new MarvelPaths();
		mp.createNewGraph("data/simple.csv");
		assertTrue(mp.findPath("BATMAN", "BATMAN").equals("unknown char BATMAN\nunknown char BATMAN"));
	}
	
	
}